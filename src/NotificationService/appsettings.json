{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=sqlserver,1433;Database=NotificationDb;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=True;",
    "Redis": "redis:6379"
  },
  "Email": {
    "SmtpServer": "smtp.example.com",
    "Port": 587,
    "Username": "notifications@example.com",
    "Password": "your-secure-password",
    "FromAddress": "notifications@example.com",
    "FromName": "Notification Service"
  },
  "Sms": {
    "ApiKey": "your-sms-api-key",
    "ApiSecret": "your-sms-api-secret",
    "FromNumber": "+1234567890",
    "MessageLengthLimit": 160
  },
  "Push": {
    "FcmServerKey": "your-fcm-server-key",
    "ApnsKeyId": "your-apns-key-id",
    "ApnsTeamId": "your-apns-team-id",
    "ApnsBundleId": "com.example.app",
    "ApnsPrivateKeyPath": "path/to/private/key"
  },
  "Cache": {
    "DefaultExpirationMinutes": 60,
    "SupportedTypesExpirationHours": 24
  },
  "AzureSignalR": {
    "ConnectionString": "your-azure-signalr-connection-string-here",
    "Enabled": false
  },
  "Jwt": {
    "Secret": "your-super-secret-jwt-key-that-should-be-at-least-32-characters-long-for-hmac-sha256",
    "Issuer": "http://localhost:8080",
    "Audience": "http://localhost:8080",
    "ExpirationMinutes": 60
  },
  "Security": {
    "RateLimit": {
      "PermitLimit": 10,
      "WindowSeconds": 10
    },
    "SecurityHeaders": {
      "ContentTypeOptions": "nosniff",
      "FrameOptions": "DENY",
      "ReferrerPolicy": "no-referrer",
      "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https:; connect-src 'self' wss: https: blob:; media-src 'none'; object-src 'none'; child-src 'none'; worker-src 'self' blob:; frame-ancestors 'none'; base-uri 'self'; form-action 'self';"
    }
  },
  "FeatureManagement": {
    "EmailNotifications": true,
    "SmsNotifications": true,
    "PushNotifications": true,
    "RealTimeDashboard": true,
    "AuditLogging": true,
    "RateLimiting": true,
    "Caching": true,
    "CircuitBreaker": true,
    "RetryPolicy": true,
    "WebhookNotifications": true
  }
}
