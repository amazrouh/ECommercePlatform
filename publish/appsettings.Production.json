{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "NotificationService": "Information"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "NotificationDb": "",
    "Redis": ""
  },
  "Email": {
    "SmtpHost": "",
    "Port": 587,
    "Username": "",
    "Password": "",
    "FromAddress": "",
    "FromName": "Notification Service",
    "UseSsl": true,
    "EnablePickupDirectory": false
  },
  "Sms": {
    "ApiKey": "",
    "ApiSecret": "",
    "FromNumber": "",
    "MessageLengthLimit": 160,
    "Provider": "Twilio"
  },
  "Push": {
    "FcmServerKey": "",
    "ApnsKeyId": "",
    "ApnsTeamId": "",
    "ApnsBundleId": "",
    "ApnsPrivateKeyPath": "",
    "Provider": "Firebase"
  },
  "Cache": {
    "DefaultExpirationMinutes": 60,
    "SupportedTypesExpirationHours": 24,
    "EnableRedis": true
  },
  "AzureSignalR": {
    "ConnectionString": "",
    "Enabled": true,
    "ServerStickyMode": "Required"
  },
  "AzureAppConfig": {
    "ConnectionString": "",
    "Enabled": true,
    "RefreshInterval": "00:05:00",
    "FeatureFlagPrefix": "NotificationService:FeatureManagement:"
  },
  "Jwt": {
    "Secret": "",
    "Issuer": "",
    "Audience": "",
    "ExpirationMinutes": 60,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "Security": {
    "RateLimit": {
      "PermitLimit": 100,
      "WindowSeconds": 60,
      "QueueLimit": 50
    },
    "SecurityHeaders": {
      "ContentTypeOptions": "nosniff",
      "FrameOptions": "DENY",
      "ReferrerPolicy": "strict-origin-when-cross-origin",
      "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https:; connect-src 'self' wss: https:; media-src 'none'; object-src 'none'; child-src 'none'; worker-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests;",
      "PermissionsPolicy": "camera=(), microphone=(), geolocation=()"
    }
  },
  "HealthChecks": {
    "Enabled": true,
    "EvaluationTimeInSeconds": 30,
    "Thresholds": {
      "Degraded": 5,
      "Unhealthy": 10
    }
  },
  "Metrics": {
    "Enabled": true,
    "UpdateIntervalSeconds": 2,
    "RetentionHours": 24
  },
  "Database": {
    "MaxRetryCount": 3,
    "MaxRetryDelaySeconds": 30,
    "CommandTimeoutSeconds": 60,
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false
  },
  "ApplicationInsights": {
    "InstrumentationKey": "",
    "ConnectionString": "",
    "EnableAdaptiveSampling": true,
    "EnableHeartbeat": true,
    "EnableDependencyTracking": true,
    "EnablePerformanceCounterCollection": true,
    "EnableEventCounterCollection": true
  },
  "FeatureManagement": {
    "EmailNotifications": true,
    "SmsNotifications": true,
    "PushNotifications": true,
    "RealTimeDashboard": true,
    "AuditLogging": true,
    "RateLimiting": true,
    "Caching": true,
    "CircuitBreaker": true,
    "RetryPolicy": true,
    "WebhookNotifications": false
  }
}
